  "repository": {
    "type": "git",
    "url": "git+https://github.com/Laturine/nba-discord-bot.git"
  },
  "author": "JC, WH, GB, MC, JP",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Laturine/nba-discord-bot/issues"
  },
  "homepage": "https://github.com/Laturine/nba-discord-bot#readme",
  "dependencies": {
    "discord.js": "^11.4.2",
    "dotenv": "^7.0.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.23",
    "node-fetch": "^2.3.0",
    "sprintf-js": "^1.1.2"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "jest-fetch-mock": "^2.1.1",
    "standard": "^12.0.1"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/config"
